<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qf.manager.dao.DrugCustomMapper" >
  <sql id="Base_Column_List" >
    drugId,drugName,drugImg,drugPrice,drugExplain,productionDate,shelfLife,note,status
  </sql>
  <select id="countItems" resultType="_long">
    select count(1)
    from report i
    where i.status != 0
  </select>
  <select id="listDownloadByPage" parameterType="com.qf.manager.pojo.dto.Page" resultType="com.qf.manager.pojo.po.Report">
    select
    <include refid="Base_Column_List" />
    from report i
    where i.status != 0
    limit #{offset},#{limit}
  </select>
</mapper>